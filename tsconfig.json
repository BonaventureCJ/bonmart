{
  "compilerOptions": {
    /* ---- Core Language Options ---- */
    "target": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    /* ---- Module Resolution ---- */
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    /* ---- JSX & Interop ---- */
    "jsx": "preserve",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    /* ---- Type Checking ---- */
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    /* ---- Performance ---- */
    "incremental": true,
    /* ---- Next.js Plugin ---- */
    "plugins": [
      {
        "name": "next"
      }
    ],
    "allowJs": true
  },
  /* ---- File Inclusion ---- */
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}